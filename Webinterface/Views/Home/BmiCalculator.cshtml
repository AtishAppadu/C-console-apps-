@model ConsoleAppProject.App02.BMI
@{
    ViewData["Title"] = "BMI Calculator";
}
<header class="jumbotron">
    <h1>BMI Calculator</h1>
    <h2>By Atish Appadu</h2>
    <p>
        This App is designed to use your body weight and height to calculate
        a BMI Index which can be used to provide information about health risks
    </p>
</header>
<section>
    <form method="post">

        <h2>Height</h2>
        <p>
            Please enter your current height in whole numbers 
            using metric or imperial units
        </p>
        <p>
            <input type="number" placeholder="Feet" 
                   value="6"  asp-for="@Model.Feet"/>
            <input type="number" placeholder="Inches" 
                   value="0" asp-for="@Model.Inches"/>

        </p>
        <p>
            <input type="number" placeholder="Centimetres" 
                   asp-for="@Model.Centimetres"/>
        </p>

        <h2>Weight</h2>
        <p>
            Please enter your current weight in whole numbers
            using metric or imperial units
        </p>
        <p>
            <input type="number" placeholder="Stones" value="" />
            <input type="number" placeholder="Pounds" value="" />
        </p>
        <p>
            <input type="number" placeholder="Kilograms" value="" />
        </p>
        <p>
            <button class="btn btn-outline-success" type="submit">Calculate</button>
        </p>





    </form>
</section>